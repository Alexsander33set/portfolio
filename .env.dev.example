# ==============================================================================
# Development Environment Variables
# Copy to .env and fill in your values
# ==============================================================================

# App Configuration
PORT=8011
ENV_TYPE=dev
SECRET_KEY=dev-secret-key-change-in-production-1234567890

# Database (MongoDB Atlas - use your own credentials)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB_NAME=portfolio

# Google OAuth 2.0 (configure for localhost in Google Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8011/auth/callback

# Allow OAuth over HTTP (only for development!)
OAUTHLIB_INSECURE_TRANSPORT=1
